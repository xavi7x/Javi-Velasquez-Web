rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas permisivas para desarrollo: 
    // Cualquier usuario autenticado puede leer y escribir en la base de datos.
    // ADVERTENCIA: No uses estas reglas en producción.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
    
    // Excepción: El formulario de contacto puede ser enviado por cualquiera.
    match /contactFormSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
  }
}
