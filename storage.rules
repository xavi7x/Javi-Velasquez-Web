rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    function isOwner() {
      // THIS IS YOUR UID
      return request.auth != null && request.auth.uid == 'H8PgEUNupRNQhBpfAxiEA3jNVSf2';
    }

    match /project-thumbnails/{projectId}/{fileName} {
      allow create, update, delete: if isOwner();
    }

    match /project-gallery/{projectId}/{fileName} {
      allow create, update, delete: if isOwner();
    }

    match /contact-attachments/{fileName} {
      // Anyone can create a contact form attachment
      allow create: if true;
      // Only owner can read or delete
      allow read, delete: if isOwner();
    }
  }
}
