rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funciones de Acceso ---

    function isSignedIn() {
      // Verifica si hay un usuario autenticado.
      return request.auth != null;
    }

    function isOwner() {
      // Verifica si el UID del usuario existe en la colecciÃ³n de 'owners' (acceso de administrador).
      // Requiere un documento en /owners/{uid}.
      return exists(/databases/$(database)/documents/owners/$(request.auth.uid));
    }

    function isClient(clientId) {
      // Verifica si el UID del usuario autenticado coincide con el ID del documento 'clientId' del match.
      return isSignedIn() && request.auth.uid == clientId;
    }

    // --- Reglas de Colecciones ---
    
    // 1. Owners
    match /owners/{ownerId} {
      // Solo el propietario puede leer y escribir su propio documento (lo necesita para que isOwner() funcione correctamente).
      allow read, write: if isOwner();
    }

    // 2. Clients y SubcolecciÃ³n Projects
    match /clients/{clientId} {
      // El Owner puede crear nuevos clientes.
      allow create: if isOwner();
      // El Owner o el cliente especÃ­fico pueden leer y actualizar el documento de cliente.
      allow read, update: if isOwner() || isClient(clientId);
      
      // Reglas para la sub-colecciÃ³n 'projects' dentro de cada cliente
      match /projects/{projectId} {
        
        // ðŸ”¹ ACCESO PÃšBLICO (Para el portafolio)
        
        // CUALQUIER PERSONA puede LISTAR (consultar) proyectos SI la consulta estÃ¡ filtrada por isPublic == true.
        // Esto permite la consulta Collection Group si la implementas, o la consulta normal si accedes cliente por cliente.
        // NOTA: Esta regla puede ser muy estricta, considera solo el filtro si estÃ¡s seguro de que siempre se usarÃ¡.
        allow list: if request.query.where.size() > 0 &&
                       request.query.where[0].field == 'isPublic' &&
                       request.query.where[0].op == '==' &&
                       request.query.where[0].value == true;
                       
        // CUALQUIER PERSONA puede LEER (obtener individualmente) un proyecto SI el campo isPublic es verdadero.
        allow get: if resource.data.isPublic == true;

        // ðŸ”¹ ACCESO PRIVADO (CorrecciÃ³n Implementada)
        
        // El Owner o el Cliente pueden hacer 'write' (create, update, delete), 'get' (lectura individual) y 'list' (consultas).
        // âœ… CORRECCIÃ“N: Se aÃ±adiÃ³ 'list' para habilitar consultas privadas (ej. cliente viendo todos sus proyectos).
        allow write, get, list: if isOwner() || isClient(clientId);
      }
    }
    
    // 3. Tickets y Comentarios
    match /tickets/{ticketId} {
      // Solo el Owner o el cliente asociado al ticket pueden leer/escribir.
      allow read, write: if isOwner() || (isSignedIn() && resource.data.clientId == request.auth.uid);
      
      // Comentarios
      match /comments/{commentId} {
        // Solo el Owner o el autor del comentario pueden leer/escribir.
        allow read, write: if isOwner() || (isSignedIn() && resource.data.authorId == request.auth.uid);
      }
    }

    // 4. Invoices
    match /invoices/{invoiceId} {
      // Solo el Owner o el cliente asociado a la factura pueden leer/escribir.
      allow read, write: if isOwner() || (isSignedIn() && resource.data.clientId == request.auth.uid);
    }
    
    // 5. Settings
    match /settings/{docId} {
      // Cualquiera puede leer la configuraciÃ³n del sitio, solo el Owner puede escribir.
      allow read: if true;
      allow write: if isOwner();
    }

    // 6. Contact Form Submissions
    match /contactFormSubmissions/{submissionId} {
      // Cualquiera puede crear una solicitud, solo el Owner puede leer/administrar.
      allow create: if true;
      allow read, update, delete: if isOwner();
    }
  }
}