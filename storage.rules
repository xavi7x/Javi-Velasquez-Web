rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isOwner() {
      // Check if the user is authenticated and matches the specific owner UID.
      return request.auth != null && request.auth.uid == 'H8PgEUNupRNQhBpfAxiEA3jNVSf2';
    }

    // Default deny
    match /{allPaths=**} {
      allow read: if true; // Allow public read for all files
      allow write: if false;
    }

    // Rules for project folders
    match /project-thumbnails/{projectId}/{fileName} {
      allow create, update, delete: if isOwner();
    }

    match /project-gallery/{projectId}/{fileName} {
      allow create, update, delete: if isOwner();
    }

    // DIAGNOSTIC: Temporarily allow public write to contact-attachments
    match /contact-attachments/{fileName} {
      allow create: if true;
      allow delete: if isOwner();
    }
    
    // Rule for private files (like the logo in the owner dashboard)
    match /Private/{allPaths=**} {
      allow write: if isOwner();
    }
  }
}
