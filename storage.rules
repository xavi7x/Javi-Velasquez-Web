rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite la lectura pública de todos los archivos para que las imágenes sean visibles.
    // Solo permite la escritura (subir, actualizar, eliminar) si el usuario está autenticado.
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}
