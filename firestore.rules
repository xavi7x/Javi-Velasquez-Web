rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner() {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/owners/$(request.auth.uid));
    }

    function isClient(clientId) {
      return isSignedIn() && request.auth.uid == clientId;
    }

    function userOwnsDocument() {
      return isSignedIn() && resource.data.userId == request.auth.uid;
    }

    function isProjectOwner() {
      return isSignedIn() && (
        isOwner() || 
        resource.data.clientId == request.auth.uid
      );
    }

    // ðŸ”¥ PORTFOLIO PÃšBLICO (existente - mantener)
    match /projects/{projectId} {
      allow read: if true;  // Totalmente pÃºblico
      allow write: if isOwner();  // Solo tÃº
    }

    // ðŸ”¥ NUEVA: PROYECTOS DE CLIENTES (PRIVADOS)
    match /client-projects/{projectId} {
      allow read, write: if isProjectOwner();
      allow create: if isSignedIn() && (
        isOwner() || 
        request.auth.uid == request.resource.data.clientId
      );
    }

    // ðŸ”¥ CLIENTES
    match /clients/{clientId} {
      allow read, write: if isOwner() || isClient(clientId);
      allow create: if isOwner();
    }

    // ðŸ”¥ OWNERS (existente)
    match /owners/{ownerId} {
      allow read, write: if isOwner() && request.auth.uid == ownerId;
    }

    // ðŸ”¥ CONTACT FORM (existente)
    match /contactFormSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isOwner();
    }

    // ðŸ”¥ SETTINGS (existente)
    match /settings/{docId} {
      allow read: if true;
      allow write: if isOwner();
    }

    // ðŸ”¥ TICKETS & INVOICES (existentes)
    match /tickets/{ticketId} {
      allow read, write: if isOwner() || 
        (isSignedIn() && resource.data.clientId == request.auth.uid);
      
      match /comments/{commentId} {
        allow read, write: if isOwner() || 
          (isSignedIn() && resource.data.authorId == request.auth.uid);
      }
    }

    match /invoices/{invoiceId} {
      allow read, write: if isOwner() || 
        (isSignedIn() && resource.data.clientId == request.auth.uid);
    }
  }
}