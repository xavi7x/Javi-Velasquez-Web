rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // =============================================
    // Helper Functions
    // =============================================
    function isOwner() {
      return exists(/databases/$(database)/documents/owners/$(request.auth.uid));
    }
    
    function isClient() {
      return exists(/databases/$(database)/documents/clients/$(request.auth.uid));
    }

    function isTheClient(clientId) {
      return request.auth.uid == clientId;
    }

    // =============================================
    // Public Access
    // =============================================

    // Anyone can read project data for the public portfolio
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isOwner(); 
    }
    
    // Anyone can submit the contact form
    match /contactFormSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isOwner();
    }
    
    // Site settings can be read by anyone (for maintenance mode check), but only written by owner
    match /settings/site {
        allow read: if true;
        allow write: if isOwner();
    }

    // =============================================
    // Owner-Only Access
    // =============================================
    
    // Owners collection is only writeable/readable by the owner themselves,
    // though this is mostly for setup. The isOwner() function is the real gate.
    match /owners/{ownerId} {
      allow read, write: if isOwner() && request.auth.uid == ownerId;
    }

    // =============================================
    // Client-Specific Access
    // =============================================

    // Clients can read/update their own data
    match /clients/{clientId} {
      allow read, update: if isOwner() || isTheClient(clientId);
      allow create, delete: if isOwner(); // Only owner can create/delete client records
    }
    
    // Tickets can be managed by the client who owns it, or the owner
    match /tickets/{ticketId} {
        // Client can read/write if the ticket belongs to them
        allow read, write: if isOwner() || (isClient() && resource.data.clientId == request.auth.uid);
        // Client can only create tickets for themselves
        allow create: if isClient() && request.resource.data.clientId == request.auth.uid;
    }

    match /tickets/{ticketId}/comments/{commentId} {
       // A client can read/write comments if they are the author. The owner can always access.
       allow read, write: if isOwner() || (isClient() && resource.data.authorId == request.auth.uid);
       // A client can only create comments as themselves on a ticket they own.
       allow create: if isOwner() || (isClient() && request.resource.data.authorId == request.auth.uid && get(/databases/$(database)/documents/tickets/$(ticketId)).data.clientId == request.auth.uid);
    }

    // Invoices can be read by the client who owns it, or the owner
    match /invoices/{invoiceId} {
      allow read: if isOwner() || (isClient() && resource.data.clientId == request.auth.uid);
      allow create, update, delete: if isOwner();
    }
    
  }
}
