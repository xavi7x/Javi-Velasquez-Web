
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for security logic reuse
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner() {
      // The user is an owner if a document exists in /owners with their UID
      return exists(/databases/$(database)/documents/owners/$(request.auth.uid));
    }

    function isClient(clientId) {
      // The user is the specified client if their UID matches
      return request.auth.uid == clientId;
    }

    // Rules for the 'owners' collection
    match /owners/{ownerId} {
      // Only the owner can read/write to the owners collection
      allow read, write: if isOwner();
    }

    // Rules for the 'clients' collection
    match /clients/{clientId} {
      // Owner can read/write. The client can read their own data.
      allow read: if isOwner() || isClient(clientId);
      allow write: if isOwner();
    }

    // Rules for the 'projects' collection
    match /projects/{projectId} {
      // Allow read if:
      // 1. It's the owner.
      // 2. The project is a 'portfolio' type.
      // 3. The user is the client assigned to the project.
      allow read: if isOwner() || resource.data.type == 'portfolio' || (resource.data.clientId != null && isClient(resource.data.clientId));
      
      // Allow write (create, update, delete) only for the owner
      allow write: if isOwner();
    }
    
    // Sub-collection for client projects
    match /clients/{clientId}/projects/{projectId} {
        allow read, write: if isOwner() || isClient(clientId);
    }

    // Rules for tickets
    match /tickets/{ticketId} {
      allow read, write: if isOwner() || (isSignedIn() && resource.data.clientId == request.auth.uid);
      match /comments/{commentId} {
        allow read, write: if isOwner() || (isSignedIn() && resource.data.authorId == request.auth.uid);
      }
    }

    // Rules for invoices
    match /invoices/{invoiceId} {
      allow read, write: if isOwner() || (isSignedIn() && resource.data.clientId == request.auth.uid);
    }
    
    // Rules for settings
    match /settings/{docId} {
      // Anyone can read site or about settings. Only owner can write.
      allow read: if true;
      allow write: if isOwner();
    }

    // Rules for contact form submissions
    match /contactFormSubmissions/{submissionId} {
      // Anyone can create (submit the form)
      allow create: if true;
      // Only owner can read, update, or delete submissions
      allow read, update, delete: if isOwner();
    }
  }
}
