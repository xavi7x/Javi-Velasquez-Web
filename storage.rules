rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Para project-thumbnails
    match /project-thumbnails/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Para project-gallery  
    match /project-gallery/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Para cualquier otra carpeta que puedas necesitar
    match /{allPaths=**} {
      allow read, write: if true;
    }
  }
}
    