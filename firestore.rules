rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner() {
      return isSignedIn() && exists(/databases/$(database)/documents/owners/$(request.auth.uid));
    }

    function isClient(clientId) {
      return isSignedIn() && request.auth.uid == clientId;
    }
    
    match /projects/{projectId} {
      // Los proyectos públicos (portafolio) son legibles por todos.
      // Los proyectos de clientes son legibles por el propietario o el cliente asignado.
      allow read: if resource.data.isPublic == true || isOwner() || isClient(resource.data.clientId);
      
      // Solo el propietario puede crear, actualizar o eliminar proyectos.
      allow write: if isOwner();
    }
    
    match /owners/{ownerId} {
      allow read, write: if isOwner() && request.auth.uid == ownerId;
    }

    match /clients/{clientId} {
      allow create: if isOwner();
      allow read, update: if isOwner() || isClient(clientId);
      // La eliminación debe ser manejada por una función en la nube para limpiar la autenticación también.
      allow delete: if isOwner();
    }

    match /tickets/{ticketId} {
      allow read, write: if isOwner() || isClient(resource.data.clientId);
      
      match /comments/{commentId} {
        allow read, write: if isOwner() || isClient(get(/databases/$(database)/documents/tickets/$(ticketId)).data.clientId);
      }
    }

    match /invoices/{invoiceId} {
      allow read, write: if isOwner() || isClient(resource.data.clientId);
    }
    
    match /settings/{docId} {
      allow read: if true;
      allow write: if isOwner();
    }

    match /contactFormSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isOwner();
    }
  }
}
