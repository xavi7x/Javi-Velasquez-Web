
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for security logic reuse
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner() {
      // The user is an owner if a document exists in /owners with their UID
      return exists(/databases/$(database)/documents/owners/$(request.auth.uid));
    }

    function isClient(clientId) {
      // The user is the specified client if their UID matches
      return isSignedIn() && request.auth.uid == clientId;
    }

    // Rules for the 'owners' collection
    match /owners/{ownerId} {
      // Only the owner can read/write to the owners collection
      allow read, write: if isOwner();
    }

    // Rules for the 'clients' collection
    match /clients/{clientId} {
      // Owner can read/write. The client can read their own data.
      allow read, write: if isOwner();
      allow read: if isClient(clientId);
      
      // Client can read/write their own projects subcollection
      match /projects/{projectId} {
        allow read, write: if isClient(clientId) || isOwner();
      }
    }

    // Rules for the 'projects' collection
    match /projects/{projectId} {
      // Owner can do anything.
      // Authenticated users (clients) can read projects they are assigned to.
      // Anyone can read if it's a portfolio piece.
      allow get: if isOwner() || (isSignedIn() && resource.data.clientId == request.auth.uid) || resource.data.type == 'portfolio';
      
      // Allow listing of projects only under specific, secure conditions.
      // 1. The owner can list everything.
      // 2. A non-authenticated user can list up to 6 projects IF they are explicitly querying for portfolio items.
      allow list: if isOwner() || (request.query.limit <= 6 && request.query.where.type == 'portfolio');
      
      // Allow write (create, update, delete) only for the owner
      allow write: if isOwner();
    }

    // Rules for tickets
    match /tickets/{ticketId} {
      allow read, write: if isOwner() || (isSignedIn() && resource.data.clientId == request.auth.uid);
      match /comments/{commentId} {
        allow read, write: if isOwner() || (isSignedIn() && resource.data.authorId == request.auth.uid);
      }
    }

    // Rules for invoices
    match /invoices/{invoiceId} {
      allow read, write: if isOwner() || (isSignedIn() && resource.data.clientId == request.auth.uid);
    }
    
    // Rules for settings
    match /settings/{docId} {
      // Anyone can read site or about settings. Only owner can write.
      allow read: if true;
      allow write: if isOwner();
    }

    // Rules for contact form submissions
    match /contactFormSubmissions/{submissionId} {
      // Anyone can create (submit the form)
      allow create: if true;
      // Only owner can read, update, or delete submissions
      allow read, update, delete: if isOwner();
    }
  }
}
