rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regla específica para el formulario de contacto.
    match /contactFormSubmissions/{submissionId} {
      // Cualquiera puede crear (enviar) un formulario.
      allow create: if true;
      // Solo usuarios autenticados pueden leer o borrar envíos.
      allow read, update, delete: if request.auth != null;
    }

    // Regla para todos los demás documentos. Permite a cualquier usuario autenticado
    // leer y escribir en CUALQUIER ruta (incluyendo colecciones).
    // Esto es permisivo para el desarrollo.
    match /{path=**} {
       allow read, write: if request.auth != null;
    }
  }
}
